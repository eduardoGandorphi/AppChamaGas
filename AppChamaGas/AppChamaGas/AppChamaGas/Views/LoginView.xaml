<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppChamaGas.Views.LoginView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Entre com sua identificação de usuário"/>
            <Entry Placeholder="E-mail"
                   Text="{Binding Email}"/>
            <Entry Placeholder="Senha" 
                   IsPassword="True"
                   Text="{Binding Senha}"/>
            <Button x:Name="btnEntrar"
                    Text="Entrar"
                    Clicked="BtnEntrar_Clicked"/>
            <Image x:Name="mImage" HorizontalOptions="Fill" VerticalOptions="StartAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>